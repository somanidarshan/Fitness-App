                android:text="Breakfast- 9.00 AM"
                android:textColor="#00695C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="2 idlis with 1 cup sambar and ¼ cup coconut chutney + 1 cup green tea + 4 almonds"
                android:textColor="#A7FFFFFF" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:gravity="center_horizontal"
                android:text="Lunch 12.30PM-1.00PM"
                android:textColor="#00695C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="2 rotis + 1 serving white rice + 1 cup dal + 1 cup mixed vegetable curry + 1 cup salad + 1 cup buttermilk (after 20 minutes)"
                android:textColor="#A7FFFFFF" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:gravity="center_horizontal"
                android:text="Afternoon Snacks- 4.00PM"
                android:textColor="#00695C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="watermelon and muskmelon"
                android:textColor="#A9FFFFFF" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="All fruit juices"
                android:textColor="#C6FFFFFF" />

            <TextView
                android:id="@+id/textView48"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="1 cup moong bean sprouts, 15 peanuts with salt pepper and lemon to taste Or 1 cup cucumber and carrot slices"
                android:textColor="#B3FFFFFF" />

            <TextView
                android:id="@+id/textView47"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="Cut Fruits(1 cup)Buttermilk(1 glass)"
                android:textColor="#B3FFFFFF" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:gravity="center_horizontal"
                android:text="Dinner -8.00PM"
                android:textColor="#00695C"
                android:textSize="18sp" />

