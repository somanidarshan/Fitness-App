                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="2 rotis + ½ cup mixed vegetable curry / chickpeas + 1 cup low-fat curd + 1 cup salad + 1 cup warm skim milk with a pinch of turmeric before bed"
                android:textColor="#B2FFFFFF" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="541 calories, 12.9 carbs, 7.1g fat, 43.3g protein  "
                android:textColor="#A3FFFFFF" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>